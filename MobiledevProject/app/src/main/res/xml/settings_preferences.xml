<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Player">

        <Preference
            android:key="user_Id"
            android:title="Player Id"
            android:summary="None"
            app:enableCopying="true"/>

        <Preference
            android:key="remove_Player"
            android:title="Remove Player"
            android:selectable="true"
            />


    </PreferenceCategory>

    <PreferenceCategory
        android:title="Storage">

        <Preference
            android:key="used_Storage"
            android:title="Used Cache"
            android:summary="50 mb"/>

    </PreferenceCategory>
</PreferenceScreen>