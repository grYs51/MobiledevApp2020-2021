<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:context=".Beatsaver.FilterDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Sorting"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:background="@color/greyText" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap">

            <TextView
                android:id="@+id/filterHot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tablayout_selected"
                android:paddingHorizontal="25dp"
                android:paddingVertical="5dp"
                android:text="Hot"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filterRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tablayout_selected"
                android:paddingHorizontal="25dp"
                android:paddingVertical="5dp"
                android:text="Rating"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filterLatest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tablayout_selected"
                android:paddingHorizontal="25dp"
                android:paddingVertical="5dp"
                android:text="Latest"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filterDownloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tablayout_selected"
                android:paddingHorizontal="25dp"
                android:paddingVertical="5dp"
                android:text="Downloads"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filterPlays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tablayout_selected"
                android:paddingHorizontal="25dp"
                android:paddingVertical="5dp"
                android:text="Plays"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>

</FrameLayout>