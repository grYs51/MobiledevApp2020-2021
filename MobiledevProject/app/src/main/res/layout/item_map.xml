<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_Map_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:riv_corner_radius="10dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundedImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:riv_oval="true"></com.makeramen.roundedimageview.RoundedImageView>


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_mapRatingColor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:src="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/roundedImageView"
                app:layout_constraintEnd_toEndOf="@+id/roundedImageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/roundedImageView"
                app:layout_constraintTop_toTopOf="@+id/roundedImageView"
                app:layout_constraintVertical_bias="1.0"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/item_mapRating"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/item_mapRatingColor"
                app:layout_constraintLeft_toLeftOf="@id/item_mapRatingColor"
                app:layout_constraintBottom_toBottomOf="@id/item_mapRatingColor"
                app:layout_constraintRight_toRightOf="@id/item_mapRatingColor"
                android:textColor="@color/white"
                android:text="100"
                android:gravity="center"/>



            <TextView
                android:id="@+id/item_songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Title"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/item_Map_image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/static_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/item_songName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_songAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="songAuthorName"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/static_dash"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_levelAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="levelAuthorName"
                android:textSize="17sp"
                app:layout_constraintLeft_toRightOf="@id/item_Map_image"
                app:layout_constraintTop_toBottomOf="@id/item_songName" />

            <TextView
                android:id="@+id/item_timeUploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_levelAuthorName"
                app:layout_constraintStart_toEndOf="@+id/item_levelAuthorName"
                app:layout_constraintTop_toTopOf="@+id/item_levelAuthorName" />


            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_Map_image">


                <com.makeramen.roundedimageview.RoundedImageView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:padding="2dp"
                    android:src="@color/greyText3"
                    app:riv_corner_radius="5dp" />

                <com.makeramen.roundedimageview.RoundedImageView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:padding="2dp"
                    android:src="@color/greyText3"
                    app:riv_corner_radius="5dp" />

                <com.makeramen.roundedimageview.RoundedImageView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:padding="2dp"
                    android:src="@color/greyText3"
                    app:riv_corner_radius="5dp" />

                <com.makeramen.roundedimageview.RoundedImageView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:padding="2dp"
                    android:src="@color/greyText3"
                    app:riv_corner_radius="5dp" />

                <com.makeramen.roundedimageview.RoundedImageView

                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.2"
                    android:padding="2dp"
                    android:src="@color/greyText3"
                    app:riv_corner_radius="5dp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>